# AICraftWorks Environment Configuration Template
# Copy this file to .env.aicraftworks and fill in your values
# NEVER commit .env.aicraftworks to git

# ============================================================================
# ENVIRONMENT SETTINGS
# ============================================================================

# Environment name (development, staging, production)
AICW_ENVIRONMENT=development

# Azure region for deployments
AICW_REGION=eastus

# ============================================================================
# AZURE AUTHENTICATION
# ============================================================================

# Azure Active Directory Tenant ID
AZURE_TENANT_ID=

# Azure Service Principal Client ID
AZURE_CLIENT_ID=

# Azure Service Principal Client Secret
AZURE_CLIENT_SECRET=

# Azure Subscription ID
AZURE_SUBSCRIPTION_ID=

# ============================================================================
# AZURE OPENAI
# ============================================================================

# Azure OpenAI resource endpoint
# Example: https://your-resource-name.openai.azure.com/
AZURE_OPENAI_ENDPOINT=

# Azure OpenAI API Key
AZURE_OPENAI_KEY=

# Azure OpenAI Deployment Name (model deployment)
AZURE_OPENAI_DEPLOYMENT=gpt-4

# Azure OpenAI API Version
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# ============================================================================
# AZURE KEY VAULT
# ============================================================================

# Azure Key Vault URL
# Example: https://your-keyvault-name.vault.azure.net/
AZURE_KEYVAULT_URL=

# ============================================================================
# AZURE BLOB STORAGE
# ============================================================================

# Azure Storage Account Connection String
AZURE_STORAGE_CONNECTION_STRING=

# Azure Storage Container Name for agent memory
AZURE_STORAGE_CONTAINER=agent-memory

# ============================================================================
# PLAYWRIGHT SERVICE
# ============================================================================

# Playwright Service WebSocket URL
# Example: wss://your-service.playwright.ms
PLAYWRIGHT_SERVICE_URL=

# Playwright Service Access Token
PLAYWRIGHT_SERVICE_TOKEN=

# Playwright Service Timeout (milliseconds)
PLAYWRIGHT_SERVICE_TIMEOUT=30000

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable Azure integrations
ENABLE_AZURE_INTEGRATION=true

# Enable Playwright Service integration
ENABLE_PLAYWRIGHT_SERVICE=true

# Enable advanced logging for debugging
ENABLE_ADVANCED_LOGGING=false

# Enable telemetry and monitoring
ENABLE_TELEMETRY=true

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================

# Azure Application Insights Connection String
APPLICATION_INSIGHTS_CONNECTION_STRING=

# Application Insights Instrumentation Key (legacy)
APPLICATION_INSIGHTS_KEY=

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable performance tracking
ENABLE_PERFORMANCE_TRACKING=true

# ============================================================================
# DATABASE & STORAGE
# ============================================================================

# Database connection string (if using external DB)
DATABASE_URL=

# Redis connection string (if using Redis for caching)
REDIS_URL=

# ============================================================================
# API CONFIGURATION
# ============================================================================

# API rate limiting (requests per minute)
API_RATE_LIMIT=100

# API timeout (milliseconds)
API_TIMEOUT=30000

# Maximum retry attempts for failed requests
API_MAX_RETRIES=3

# ============================================================================
# SECURITY
# ============================================================================

# JWT secret for authentication (generate a strong random string)
JWT_SECRET=

# Session secret for cookie signing
SESSION_SECRET=

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ============================================================================
# CLAUDE FLOW SPECIFIC
# ============================================================================

# Claude Flow API Key (if using external Claude Flow service)
CLAUDE_FLOW_API_KEY=

# Maximum number of agents in a swarm
MAX_SWARM_AGENTS=10

# Agent timeout (milliseconds)
AGENT_TIMEOUT=60000

# Memory retention period (days)
MEMORY_RETENTION_DAYS=90

# ============================================================================
# DEVELOPMENT & TESTING
# ============================================================================

# Enable debug mode
DEBUG=false

# Enable mock services for testing
USE_MOCK_SERVICES=false

# Test data generation seed
TEST_DATA_SEED=12345

# ============================================================================
# NOTIFICATIONS
# ============================================================================

# Email notifications (SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# Slack webhook for notifications
SLACK_WEBHOOK_URL=

# Teams webhook for notifications
TEAMS_WEBHOOK_URL=

# ============================================================================
# ADVANCED CONFIGURATION
# ============================================================================

# Node environment
NODE_ENV=development

# Port for local development server
PORT=3000

# Number of worker processes
WORKER_PROCESSES=4

# Maximum memory per process (MB)
MAX_MEMORY_MB=2048

# ============================================================================
# NOTES
# ============================================================================

# 1. Generate strong random values for secrets:
#    node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
#
# 2. Never commit this file with real values to git
#
# 3. Use Azure Key Vault for production secrets
#
# 4. Rotate secrets regularly
#
# 5. See docs/aicraftworks/CUSTOMIZATION_GUIDE.md for detailed setup
